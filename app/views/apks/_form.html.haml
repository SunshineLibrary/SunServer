= form_for(@apk, :html => {:class => "form-horizontal"}) do |f|
  %fieldset
    - if @apk.errors.any?
      #error_explanation
        %h2
          = pluralize(@apk.errors.count, "error")
          prohibited this apk from being saved:
        %ul
          - @apk.errors.full_messages.each do |msg|
            %li= msg
    .control-group
      = f.label :file, "Apk文件", :class => "control-label"
      .controls
        = f.file_field :file
    .control-group
      = f.label :description, "描述", :class => "control-label"
      .controls
        = f.text_field :description
    .form-actions
      = f.submit :class => "btn btn-success"
