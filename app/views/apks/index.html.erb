<legend>Apk 列表</legend>

<div>
	<%@apk = Apk.new%>
	<%= render 'form'%>	
</div>

<table class="table table-striped">
  <tr>
    <th>Version</th>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @apks.each do |apk| %>
  <%next if apk.destroyed?%>
  <tr>
    <td><%= apk.version_name %></td>
    <td><%= apk.version %></td>
    <td><%= apk.name %></td>
    <td><%= apk.description %></td>
    <td><%= link_to 'Show', apk %></td>
    <td><%= link_to 'Edit', edit_apk_path(apk) %></td>
    <td><%= link_to 'Destroy', apk, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
