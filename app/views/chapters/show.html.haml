= render :partial => "shared/breadcrumb_curriculum", :locals => { :item => @chapter }
%p#notice= notice
.page-header
  %h1
    = best_in_place @chapter, :name, :type => :input
    %span.label= Chapter.zh_name
.row
  .span6
    %dl.dl-horizontal
      %dt 所属课程
      %dd= link_to @course.name, course_path(@course)
      %dt 单元概述
      %dd
        = best_in_place @chapter, :description, :type => :textarea
.row
  .span2
    = link_to_back '返回课程', course_path(@course)
%br/
%br/
%br/
%h3 章节列表
%table.table.table-striped
  %tr
    %th.span3 名称
    %th.span5 概述
    %th.span2
    %th.span2
  - @chapter.lessons.each do |l|
    %tr
      %td= best_in_place l, :name, :type => :input
      %td= best_in_place l, :description, :type => :textarea
      %td= link_to_check '查看', l
      %td= link_to_delete '删除', l, confirm: '确定要删除此章节吗？', method: :delete
= link_to_add '创建章节', new_lesson_path(:chapter_id => @chapter.id)
