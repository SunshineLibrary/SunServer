<h1>标签列表</h1>

<table border="1" cellspacing="0" cellpadding="3" style = "text-align: center;">
  <tr>
    <th>名字</th>
    <th>类型</th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.name %></td>
    <td><%= tag.tag_type%></td>
    <!--
    	<td><%= link_to 'Show', tag %></td>
    -->
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

