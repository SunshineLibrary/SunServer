<h1>Editing audio_collection</h1>

<%= render 'form' %>

<table border="1" cellspacing="0" cellpadding="3" style = "text-align: center;">
	<tr>
		<th>标题</th>		
		<th>简介</th>
		<th>上传文件</th>
		<th></th>
		<th></th>
	</tr>
	<% @audio_collection.audios.each do |audio|%>
		<% unless audio.destroyed? %>
		<tr>
			<td><%= audio.title%></td>
			<td><%= audio.intro%></td>
			<td><%= audio.audio_file_file_name if audio.audio_file?%></td>
			<th><%= link_to "编辑", edit_audio_path(audio)%></th>		
			<th><%= link_to "删除", audio, confirm: 'Are you sure?', method: :delete%></th>	
		</tr>
		<% end %>
	<%end %>
</table>

<h1>New Audio</h1>
<% @audio = Audio.new %>
<%= render :partial => 'audios/form', :locals => {:audio_collection_id => @audio_collection.id}%>

<%= link_to 'Show', @audio_collection %> |
<%= link_to 'Back', audio_collections_path %>
