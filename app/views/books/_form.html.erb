<!--, :html => { :multipart => true } -->
<%= form_for @book do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <% bcollection = [["自动创建", -1]] %>
  <% BookCollection.all.each do |bc| %>
  <%	bcollection<<[bc.title, bc.id] %>
  <% end %>
  	
  <div class="field">
  	<p>
		书名 (*)
	    <%= f.text_field :title %>
    </p>
  </div>
  <div class="field">
  	<p>
		作者 (*)
	    <%= f.text_field :author %>
   	</p>
  </div>
    
  <div class="field">
  	简介<br />
    <%= f.text_area :intro %>
  </div>
  <div class="field">
    ISBN   <br />
    <%= f.text_field :ISBN %>
  </div>
  <div class="field">
	书籍集合  <br/>
	<%= f.select :book_collection_id, bcollection%>
	<%= link_to '手动创建', new_book_collection_path%>	
  </div>
  <div class="field">
	文件路径    
	
	<%if @book.epub_file? %>
	<%=	"(已上传:#{@book.epub_file_file_name})"%>
	<%else%>
	<%=	"(未上传)"%>
	<%end%>
	
	<br />
    <%= f.file_field :epub_file %>
  </div>
  <div class="field">
	出版年份    <br />
    <%= f.number_field :publication_year %>
  </div>
  <div class="field">
	出版商       <br />
    <%= f.text_field :publisher %>
  </div>
  <div class="field">
	封面（中）
    <%= f.text_field :cover_m_path %>
  </div>
  <div class="field">
 	封面（小）
    <%= f.text_field :cover_s_path %>
  </div>
  
  <% pcollection = []%>
  <% Provider.all.each do |provider|%>
  <% 	pcollection << [provider.name, provider.id]%>
  <% end%>
  
  <div class="field">
	内容供应商<br />
    <%= f.select :provider_id, pcollection %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
