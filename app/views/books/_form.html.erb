<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <% bcollection = [["自动创建", -1]] %>
  <% BookCollection.all.each do |bc| %>
  <%	bcollection<<[bc.title, bc.id] %>
  <% end %>
  	
  <div class="field">
  	<p>
		书名 (*) <span class="required"></span>
	    <%= f.text_field :title %>
    </p>
  </div>
  <div class="field">
  	<p>
		作者 (*) <span class="required"></span>
	    <%= f.text_field :author %>
   	</p>
  </div>
    
  <div class="field">
  	简介<br />
    <%= f.text_area :intro %>
  </div>
  <div class="field">
    <%= f.label :ISBN %><br />
    <%= f.text_field :ISBN %>
  </div>
  <div class="field">
    <%= f.label :file_path %><br />
    <%= f.text_field :file_path %>
  </div>
  <div class="field">
	书籍集合
	<%= link_to '手动创建', new_book_collection_path%>
	<br />
    <%= f.select :book_collection_id, bcollection%>
  </div>
  <div class="field">
    <%= f.label :publication_year %><br />
    <%= f.number_field :publication_year %>
  </div>
  <div class="field">
    <%= f.label :publisher %><br />
    <%= f.text_field :publisher %>
  </div>
  <div class="field">
    <%= f.label :cover_m_path %><br />
    <%= f.text_field :cover_m_path %>
  </div>
  <div class="field">
    <%= f.label :cover_s_path %><br />
    <%= f.text_field :cover_s_path %>
  </div>
  
  <% pcollection = []%>
  <% Provider.all.each do |provider|%>
  <% 	pcollection << [provider.name, provider.id]%>
  <% end%>
  
  <div class="field">
    <%= f.label :provider_id %><br />
    <%= f.select :provider_id, pcollection %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
