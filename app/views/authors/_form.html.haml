= form_for(@author) do |f|
  - if @author.errors.any?
    #error_explanation
      %h2
        = pluralize(@author.errors.count, "error")
        prohibited this author from being saved:
      %ul
        - @author.errors.full_messages.each do |msg|
          %li= msg
  .field
    姓名
    %br/
    = f.text_field :name
  .field
    国籍
    %br/
    = f.text_field :nationality
  .field
    简介
    %br/
    = f.text_area :intro
  .actions
    = f.submit
