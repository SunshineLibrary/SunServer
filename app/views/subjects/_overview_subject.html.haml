-# Partial parse @subject and show it out as a tree

.page-header
  %h2
    = link_to @subject.name, @subject
    %span.label= Subject.zh_name
    %small 科目内容纵览
    
%br

  %ul.unstyled
    -@subject.courses.each do |course|
      %li= link_to course.name, course_path(course)
      %ul
        -course.chapters.each do |chapter|
          %li= link_to chapter.name, chapter_path(chapter)          
          %ul
            -chapter.lessons.each do |lesson|
              %li= link_to lesson.name, lesson_path(lesson)              
              %ul
                -lesson.sections.each do |section|
                  %li= link_to section.name, section_path(section)
