= form_for @subject, :html => {:class => "form-horizontal"} do |f|
  - if @subject.errors.any?
    #error_explanation
      %h2
        = pluralize(@subject.errors.count, "error")
        prohibited this subject from being saved:
      %ul
        - @subject.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    .control-group
      = f.label :name, "科目名称", :class => "control-label"
      .controls
        = f.text_field :name, :class => "input-xlarge"
    .form-actions
      = f.submit :value => "确定", :class => "btn btn-primary"
      = link_to '取消', subjects_path, :class => "btn"
