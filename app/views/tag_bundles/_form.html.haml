= form_for(@tag_bundle) do |f|
  - if @tag_bundle.errors.any?
    #error_explanation
      %h2
        = pluralize(@tag_bundle.errors.count, "error")
        prohibited this tag_bundle from being saved:
      %ul
        - @tag_bundle.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :chapter_id
    %br/
    = f.number_field :chapter_id
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :tags
    %br/
    = f.text_field :tags
  .actions
    = f.submit
