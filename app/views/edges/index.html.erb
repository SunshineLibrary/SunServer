<h1>Listing edges</h1>

<table class="table talbe-striped">
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Section</th>
    <th>Condition</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @edges.each do |edge| %>
  <tr>
    <td><%= edge.from_id %></td>
    <td><%= edge.to_id %></td>
    <td><%= edge.section_id %></td>
    <td><%= edge.condition %></td>
    <td><%= link_to 'Show', edge %></td>
    <td><%= link_to 'Edit', edit_edge_path(edge) %></td>
    <td><%= link_to 'Destroy', edge, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

