= form_for @school, :html => {:class => "form-horizontal"} do |f|
  - if @school.errors.any?
    #error_explanation
      %h2
        = pluralize(@school.errors.count, "error")
        prohibited this school from being saved:
      %ul
        - @school.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    .control-group
      = f.label :name, "名称", :class => "control-label"
      .controls
        = f.text_field :name, :class => "input-xlarge"
    .control-group
      = f.label :location, "地址", :class => "control-label"
      .controls
        = f.text_field :location, :class => "input-xlarge"
    .form-actions
      = f.submit "创建", :class => "btn btn-primary"
