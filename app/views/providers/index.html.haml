%p#notice= notice
.page-header
  %h1
    所有提供方
  %br/
  = link_to_add '添加提供方', new_provider_path

%table(class="table table-striped")
  %tr
    %th 名称
    %th 简介      
    %th/
    %th/
   
  - @providers.each do |provider|
    - next if provider.destroyed?
    %tr
      %td.span3= best_in_place provider, :name, :type => :input
      %td.span5= best_in_place provider, :intro, :type => :textarea    
      %td.span2= link_to_check '查看', provider
      %td.span2= link_to_delete '删除', provider, :confirm => "确定要删除吗？", :method => :delete                                      
%br/

