<%= form_for(@provider) do |f| %>
  <% if @provider.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@provider.errors.count, "error") %> prohibited
        this post from being saved:</h2>
    <ul>
    <% @provider.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
 
  <div class="field">
	名称<br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
	简介<br />
    <%= f.text_area :intro%>
  </div>
  <div class="field">
    Logo
    <%= "(已上传#{@provider.logo_file_name})" if @provider.logo?%>        
    <br />
    <%= f.file_field :logo %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>