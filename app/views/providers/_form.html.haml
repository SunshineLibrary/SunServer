= form_for(@provider) do |f|
  - if @provider.errors.any?
    #errorExplanation
      %h2
        = pluralize(@provider.errors.count, "error")
        prohibited
        this post from being saved:
      %ul
        - @provider.errors.full_messages.each do |msg|
          %li= msg
  .field
    名称
    %br/
    = f.text_field :name
  .field
    简介
    %br/
    = f.text_area :intro
  .field
    Logo
    \#{"(已上传#{@provider.logo_file_name})" if @provider.logo?}
    %br/
    = f.file_field :logo
  .actions
    = f.submit
