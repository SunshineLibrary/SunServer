= form_for(@app, :html => {:class => "form-horizontal"}) do |f|
  %fieldset
    - if @app.errors.any?
      #error_explanation
        %h2
          = pluralize(@app.errors.count, "error")
          prohibited this app from being saved:
        %ul
          - @app.errors.full_messages.each do |msg|
            %li= msg
    .control-group
      = f.label :name, "名称", :class => "control-label"
      .controls
        = f.text_field :name

    .form-actions
      = f.submit "确定", :class => "btn btn-success"
