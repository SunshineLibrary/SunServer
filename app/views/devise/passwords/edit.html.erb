<div class="page-header">
  <h1>修改密码</h1>
</div>

<%= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "form-horizontal", :method => :put } do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <fieldset>
    <div class="control-group">
      <%= f.label :password, "新密码", :class => "control-label" %> 
      <div class="controls">
        <%= f.email_field :password, :class => "input-xlarge"%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password_confirmation, "请再输入一次", :class => "control-label" %> 
      <div class="controls">
        <%= f.email_field :password_confirmation, :class => "input-xlarge"%>
        <%= f.submit "确认修改", :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
