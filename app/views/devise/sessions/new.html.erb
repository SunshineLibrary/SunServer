<div class="page-header">
  <h1>登录</h1>
</div>


<%= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"} do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <div class="control-group">
      <%= f.label :email, "电子邮箱", :class => "control-label" %> 
      <div class="controls">
        <%= f.email_field :email, :class => "input-xlarge"%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password, "密码", :class => "control-label" %> 
      <div class="controls">
        <%= f.email_field :password, :class => "input-xlarge"%>
      </div>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="control-group">
        <div class="controls">
           <label class="checkbox">
            <%= f.check_box :remember_me %>记住我
           </label>
           <%= f.submit "登录", :class => "btn btn-primary" %>
        </div>
      </div>
    <% end -%>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
