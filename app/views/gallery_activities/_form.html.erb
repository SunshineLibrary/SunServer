<div id="newGalleryActivityForm" style="display:none">
	<% @gallery_activity = GalleryActivity.new %>
	<%= form_for @gallery_activity, :url => {:controller => :gallery_activities, :action => :create, :section_id => section_id }, :html => {:class => "well form-horizontal"} do |f| %>	
		<fieldset>
      <div class="control-group">
        <%= f.label :name, "名称", :class => "control-label" %> 
        <div class="controls">
          <%= f.text_field :name, :class => "input-xlarge"%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :order, "顺序", :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :order, :class => "input-xlarge", :value => activity_size %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :provider_id, "提供方", :class => "control-label" %> 
        <div class="controls">
          <%= f.select :order, Provider.list_all, :class => "input-xlarge" %>
        </div>
      </div>   
      <div class="control-group">
        <%= f.label :notes, "重点笔记", :class => "control-label" %> 
        <div class="controls">
          <%= f.text_area :notes, :class => "input-xlarge" %> 
        </div>
      </div>
      <div class="for-actions">
        <%= f.submit "提交", :class => "btn btn-success" %>
      </div>    
    </fieldset>
	<% end %>
</div>