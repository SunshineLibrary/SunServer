<div class="page-header">
  <h1>登录</h1>
</div>


<%= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"} do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :username, "用户名", :class => "control-label" %> 
      <div class="controls">
        <%= f.email_field :email, :class => "input-xlarge"%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password, "登录密码", :class => "control-label" %> 
      <div class="controls">
        <%= f.email_field :password, :class => "input-xlarge"%>
        <%= f.submit "登录", :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
