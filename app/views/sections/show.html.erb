<%= render :partial => "shared/breadcrumb_curriculum", :locals => { :item => @section } %>

<p id="notice">
	<%= notice %>
</p>

<div class="page-header">
  <h1>
    <%= best_in_place @section, :name, :type => :input %>
    <span class="label">小节</span>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>所属章节</dt>
  <dd><%= link_to @lesson.name, lesson_path(@lesson) %></dd>
  <dt>重点笔记</dt>
  <dd><%= best_in_place @section, :description, :type => :textarea %></dd>
</dl>


<%= render 'list_activity_table'%>
<% local_params = {:section_id => @section.id, :activity_size => @activities_listed}%>
<br/>
<div id="newActivityForm">
</div>

<br/>

<%= render 'edge_edit'%>



<script type="text/javascript">
  function insertNewActivityForm(type, order) {
    $("#newActivityForm").hide();
    $("#newActivityForm").load("../activities/add_form", {type: type, section_id: <%= @section.id %>});
    $("#newActivityForm").show();
  };
</script>

